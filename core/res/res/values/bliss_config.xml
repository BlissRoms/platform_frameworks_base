        <item>com.google.android.settings.intelligence</item>
        <item>com.mediatek.ims</item>
        <item>com.qualcomm.qti.cne</item>
        <item>com.shannon.imsservice</item>
        <item>org.pixelexperience.faceunlock</item>
  </string-array>
</resources>
