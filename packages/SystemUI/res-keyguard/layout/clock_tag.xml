<?xml version="1.0" encoding="utf-8"?>
<com.android.keyguard.clock.ClockLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/tagContainer"
            android:layout_width="@dimen/btlg_tag_width"
            android:layout_height="@dimen/btlg_tag_height"
            android:orientation="vertical"
            android:paddingLeft="72dp"
            android:paddingTop="10dp">

            <TextClock
                android:id="@+id/headlineClock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:format12Hour="kk:mm:ss"
                android:format24Hour="hh:mm:ss"
                android:letterSpacing="0.06"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tagBuild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:alpha="0.5"
                android:text="RomBuildStatus"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:letterSpacing="0.08" />

            <TextClock
                android:id="@+id/tagDayOfWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:alpha="0.5"
                android:format12Hour="EEEE"
                android:format24Hour="EEEE"
                android:fontFamily="sans-serif"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14sp"
                android:letterSpacing="0.08" />

            <TextClock
                android:id="@+id/tagMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:alpha="0.25"
                android:format12Hour="MMMM"
                android:format24Hour="MMMM"
                android:fontFamily="sans-serif"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14sp"
                android:letterSpacing="0.08" />

            <TextClock
                android:id="@+id/tagYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:alpha="0.25"
                android:format12Hour="yyyy"
                android:format24Hour="yyyy"
                android:fontFamily="sans-serif"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="14sp"
                android:letterSpacing="0.08" />
        </LinearLayout>
    </LinearLayout>

</com.android.keyguard.clock.ClockLayout>